# Порты сервисов
FRONTEND_PORT=3000
BACKEND_PORT=1337
POSTGRES_PORT=5432

# База данных PostgreSQL (для продакшена)
POSTGRES_DB=strapi
POSTGRES_USER=strapi
POSTGRES_PASSWORD=strapi_password

# Настройки безопасности Strapi
JWT_SECRET=my_jwt_secret_key_12345
ADMIN_JWT_SECRET=my_admin_jwt_secret_key_12345
APP_KEYS=key1,key2,key3,key4
API_TOKEN_SALT=my_api_token_salt_12345

# URL API Strapi для фронтенда
NEXT_PUBLIC_STRAPI_API_URL=http://localhost:1337

# Режим разработки
NODE_ENV=development