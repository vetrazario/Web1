# Порты сервисов
FRONTEND_PORT=3000
BACKEND_PORT=1337
POSTGRES_PORT=5432

# База данных PostgreSQL
POSTGRES_DB=strapi
POSTGRES_USER=strapi
POSTGRES_PASSWORD=StrongPassword123!

# Настройки безопасности Strapi
JWT_SECRET=generate-a-jwt-secret-key-here
ADMIN_JWT_SECRET=generate-a-jwt-admin-secret-key-here
APP_KEYS=key1,key2,key3,key4
API_TOKEN_SALT=generate-a-salt-key-here

# Настройки администратора Strapi (создается автоматически)
STRAPI_ADMIN_EMAIL=your-email@example.com
STRAPI_ADMIN_PASSWORD=YourStrongPassword123!
STRAPI_ADMIN_FIRSTNAME=Admin
STRAPI_ADMIN_LASTNAME=User

# URL API Strapi для фронтенда
NEXT_PUBLIC_STRAPI_API_URL=http://localhost:1337

# Режим работы
NODE_ENV=production 